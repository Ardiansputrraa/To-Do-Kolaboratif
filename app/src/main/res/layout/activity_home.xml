<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/rectangle_8"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="77dp"
        android:layout_marginLeft="30dp"
        android:text="To - Do Kolaboratif"
        android:textSize="24sp"
        android:textAlignment="center"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_9"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="100dp" />

    <ImageButton
        android:id="@+id/btn_to_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_about_primarycolor"
        android:layout_marginTop="231dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/tv_to_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:textSize="18sp"
        android:layout_marginTop="242dp"
        android:layout_marginLeft="88dp"/>

    <ImageButton
        android:id="@+id/btn_to_myTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_mytask_primarycolor"
        android:layout_marginTop="311dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/tv_to_myTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Task"
        android:textSize="18sp"
        android:layout_marginTop="322dp"
        android:layout_marginLeft="88dp"/>

    <ImageButton
        android:id="@+id/btn_to_sendTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_sendtask_primarycolor"
        android:layout_marginTop="386dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/tv_to_sendTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Task"
        android:textSize="18sp"
        android:layout_marginTop="398dp"
        android:layout_marginLeft="88dp"/>

    <ImageButton
        android:id="@+id/btn_to_logOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_logout_primarycolor"
        android:layout_marginTop="466dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/tv_to_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textSize="18sp"
        android:layout_marginTop="478dp"
        android:layout_marginLeft="88dp"/>

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To - Do Kolaboratif Version 1.0"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginTop="707dp"/>

</RelativeLayout>