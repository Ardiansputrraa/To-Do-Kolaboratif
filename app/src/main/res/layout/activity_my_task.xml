<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <ImageButton
            android:id="@+id/btn_back_mytask"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_back_blue"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rectangle_13"
            android:layout_marginLeft="175dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="245dp"
            android:layout_centerVertical="true"
            android:text="My Task"
            android:fontFamily="sans-serif-black"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_myTask"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_height="527dp"
        tools:listitem="@layout/item_my_task">

    </androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rectangle_15"/>

        <ImageButton
            android:id="@+id/btn_to_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_home_white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"/>

        <ImageButton
            android:id="@+id/btn_to_myTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_task_white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="135dp"/>

        <ImageButton
            android:id="@+id/btn_to_sendTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_computer_white"
            android:layout_marginTop="13dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="235dp"/>

        <ImageButton
            android:id="@+id/btn_to_logOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_logout_white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="335dp"/>
    </RelativeLayout>
</LinearLayout>